.search {
  &__item {
    padding: 30px 20px;
    margin: 20px;
    border: 2px solid transparent;
    width: auto;
    background-color: #FFFFFF;
    border-radius: 4PX;
    box-sizing: border-box;
    -webkit-box-shadow: 0 0 50rpx 0 rgba(0, 0, 0, 0.05);
      box-shadow: 0 0 50rpx 0 rgba(0, 0, 0, 0.05);
  }

  &__item--active {
    border-color: #ffc7c7;
  }

  &__item-image-container {
    margin: 0 10px;
  }

  &__item-image {
    width: 20vw;
    height: 20vw;
    background-color: white;
  }

  &__item-summary {
    padding: 0 10px;
    border-right: 1px solid #f6f6f6;
  }

  &__item-title {
    display: block;
    margin: 0 10px;
    font-size: 14PX;
    font-weight: bold;
    color: #363543;
  }

  &__item-icon {
    vertical-align: middle;
    color: #a7a6b3;
  }

  &__item-description {
    margin: 0 10px;
    font-size: 12PX;
    color: #a7a6b3;
  }

  &__countdown {
    display: block;
    margin: 15px 10px;
    font-size: 16PX;
    font-weight: bolder;
    color: #363543;
  }

  &__item-prompt-container {
    text-align: center;
    padding: 0 15px;
  }

  &__item-promt {
    display: block;
    font-size: 12PX;
  }

  &__item-distance {
    font-size: 10PX;
    color: #a7a6b3;
  }
}