.detail-page {
 .at-grid-item__content {
    box-sizing: border-box;
    padding: 2.4vw;
  }

  .at-grid__flex {
    .content-inner__icon {
      -webkit-flex: auto;
      -ms-flex: auto;
      flex: auto;
      width: 100%;
      border-radius: 16px;
      overflow: hidden;
      background-color: #f6f6f6;
    }

    .content-inner__img {
      width: 100%;
      height: 100%;
    }
  }

  &__image-container {
    padding: 20px;
  }

  &__image {
    max-width: 100%;
    height: auto;
  }

  &__list-title {
    padding: 30px 20px;
    margin: 0 12px;
    font-size: 16PX;
    font-weight: bold;
  }

  &__item {
    padding: 30px 20px;
    box-sizing: border-box;
  }

  &__item-image-container {
    margin: 0 12px;
  }

  &__item-image {
    width: 20vw;
    height: 20vw;
    background-color: white;
  }

  &__item-summary {
    margin: 0 12px;
  }

  &__item-title {
    display: block;
    margin: 0 10px;
    font-size: 14PX;
    font-weight: bold;
    color: #363543;
  }

  &__item-description {
    margin: 0 10px;
    font-size: 12PX;
    color: #a7a6b3;
  }

  &__countdown {
    display: block;
    margin: 15px 10px;
    font-size: 16PX;
    font-weight: bolder;
    color: #363543;
  }

  &__item-button {
    margin: 6px 0;
    padding: 0 30px;
    border-color:  #ffc7c7;
    background-color: #ffc7c7;
  }
}